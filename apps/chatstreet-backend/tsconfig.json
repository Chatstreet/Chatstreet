{
  "compilerOptions": {
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "*.test.ts", "*.spec.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
