{
  "name": "chatstreet-backend",
  "version": "1.0.0",
  "description": "Backend application of chatstreet, based on express js framework",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "build:dev": "set NODE_ENV=development && npm run gen-swagger && webpack",
    "build:prod": "set NODE_ENV=production && npm run gen-swagger && webpack",
    "build": "npm run build:prod",
    "start:dev": "nodemon main.ts",
    "start": "clear && node .",
    "test:e2e": "jest \"tests/.*\\.test.ts$\"",
    "test:unit": "jest \"src/.*\\.spec.ts$\"",
    "test": "npm run test:unit && npm run test:e2e",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "format:check": "prettier --ignore-path .prettierignore --check \"**/*.+(js|ts|json)\"",
    "format:write": "prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json)\"",
    "format": "npm run format:write && npm run lint",
    "prep-pr": "npm run format && npm run test",
    "gen-swagger": "ts-node ./src/utils/swagger-autogen/swagger-auto-generation.util.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chatstreet/Chatstreet.git"
  },
  "keywords": [
    "express",
    "node",
    "typescript",
    "javascript",
    "microservice",
    "backend",
    "api",
    "rest"
  ],
  "author": "David Abderhalden",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Chatstreet/Chatstreet/issues"
  },
  "homepage": "https://github.com/Chatstreet/Chatstreet#readme",
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mysql": "^2.15.21",
    "@types/npmlog": "^4.1.4",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.2",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^5.0.4",
    "webpack": "^5.84.1",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mysql": "^2.18.1",
    "npmlog": "^7.0.1",
    "rxjs": "^7.8.1",
    "swagger-autogen": "^2.23.1",
    "swagger-ui-express": "^4.6.3",
    "validator": "^13.9.0"
  }
}
